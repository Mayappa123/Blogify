<% layout("/layouts/boilerplate") %>
<head>
  <link rel="stylesheet" href="../../public/css/blogs.css" />
</head>
<body>
  <div class="blogPost">
    <% userBlogs.forEach(b => { %>
    <div class="blog-container">
      <a href="/blogs/<%= b._id %>" class="singleBlog">
        <div class="blogProfile">
          <h5 class="authorName text-black"><%= b.author %></h5>
        </div>
        <div class="blog-header">
          <h6 class="blog-title"><%= b.title %></h6>
          <p class="blog-meta">Posted on <%= b.date %></p>
        </div>
      </a>
    </div>
    <% }) %>
  </div>
  <br /><br />
</body>
