<!-- //blogs/index.ejs -->

<% layout("/layouts/boilerplate") %>
<head>
  <link rel="stylesheet" href="../../public/css/blogs.css" />
</head>
<body>
  <div class="blogPost mt-5">
    <% Allblogs.forEach(blog => { %>
    <div class="blog-container">
      <a href="/blogs/<%= blog._id %>" class="singleBlog">
        <div class="blogProfile">
          <h5 class="authorName text-black">
            <img src="../../extra/user.jpg" alt="" /><%= blog.author %>
          </h5>
          <div class="blogSubject">
            <button type="button" class="btn btn-outline-dark">
              <%= blog.subject %>
            </button>
          </div>
        </div>
        <div class="blog-header">
          <h6 class="blog-title"><%= blog.title %></h6>
          <p class="blog-meta">Posted on <%= blog.date %></p>
        </div>
      </a>
    </div>
    <% }) %>
  </div>
</body>
