<body
  style="
    background: transparent;
    backdrop-filter: blur(20px);
    background-repeat: no-repeat;
    background: linear-gradient(
      33deg,
      #773a8a,
      #4e4848,
      #280531,
      #463434,
      #7e3a92
    );
    color: white;
    background-color: linear-gradient(pink, green);
  "
>
  <br />
  <h3 class="col-4 offset-4 text-center">LOGIN</h3>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-5">
        <form action="/login" method="post" class="needs-validation" novalidate>
          <div class="form-group">
            <label for="username">Username</label>
            <input
              type="text"
              class="form-control"
              id="username"
              name="username"
              required
            />
          </div>

          <div class="form-group mt-3">
            <label for="password">Password</label>
            <div class="input-group">
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
              />
            </div>
          </div>

          <div class="input-group mb-1">
            <input
              class="form-check input"
              type="checkbox"
              onclick="myFunction()"
            />Show Password
          </div>

          <div class="mt-3">
            <button type="submit" class="btn btn-success mt-3 col-4 offset-4">
              Log In
            </button><a href="/signup" style="font-size: 12px; text-decoration: none;">  Don't have an account ?</a>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script src="../../public/js/TogglePassword.js"></script>
</body>
