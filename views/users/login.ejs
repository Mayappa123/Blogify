<head>
  <link rel="stylesheet" href="../../public/css/login.css" />
</head>
<body>
  <br />
  <h3 class="col-4 offset-4 text-center mt-5">LOGIN</h3>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-5">
        <form action="/login" method="post" class="needs-validation" novalidate>
          <div class="form-group">
            <label for="username">Username</label>
            <input
              type="text"
              class="form-control"
              id="username"
              name="username"
              required
            />
          </div>

          <div class="form-group mt-3">
            <label for="password">Password</label>
            <div class="input-group">
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
              />
            </div>
          </div>

          <div class="input-group mb-1">
            <input
              class="form-check input"
              type="checkbox"
              onclick="myFunction()"
              style="margin-right: 5px;"
            /> Show Password
          </div>

          <div class="mt-3 mb-1">
            <button type="submit" class="btn btn-success mt-3 col-4 offset-4">
              Login
            </button>
          </div>
          <div class="text-center">OR</div>
          <div class="mt-1 mb-5">
            <button
              type="submit"
              class="signupBtn btn btn-primary mt-1 col-4 offset-4"
            >
              <a
                class="signupBtn"
                style="color: white; text-decoration: none"
                href="/signup"
                >Signup</a
              >
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script src="../../public/js/TogglePassword.js"></script>
</body>
