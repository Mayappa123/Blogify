<!-- users/profile.ejs.js -->

<% layout("/layouts/boilerplate") %>

<head>
  <title>Active User Profile</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #7fabe6;
    }

    .container3 {
      max-width: 220px;
      margin: 0;
      padding: 20px;
      background-color: #ffffff;
      border-radius: 15px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      position: relative;
      right: -80px;
      top: -25px;
      /* background: transparent;
      backdrop-filter: blur(50px); */
    }

    .pen {
      font-size: 20px;
      position: relative;
      top: 10px;
      right: 10px;
      color: #333333;
      cursor: pointer;
    }

    .useractive {
      font-size: 80px;
      margin: 20px 0 0 0;
      color: #333333;
    }

    .bioContent {
      font-size: 12px;
      color: #333333;
      margin-bottom: 10px;
      transition: all 0.3s ease;
    }

    .bioContent:hover {
      cursor: pointer;
      color: #ffffff;
      border: 1px solid black;
      background-color: #7c6e6e;
      border-radius: 10px;
    }

    .editBio {
      margin-bottom: 10px;
      font-size: 10px;
    }

    .additional-content {
      display: none;
      padding: 10px;
      margin-top: 20px;
      background-color: #f0f0f0;
      border-radius: 5px;
    }

    .user {
      height: 80px;
      width: 80px;
    }
  </style>
</head>

<body>
  <div class="container3 mt-1 ms-auto">
    <p
      class="editBio btn btn-outline-primary btn-sm"
      style="width: 50px; position: relative; right: 10px; top: -40px"
    >
      Edit
    </p>
    <img src="../../extra/user.jpg" alt="" class="user useractive" />
    <!-- <form action="">
      <input type="file" name="" id="">
    </form> -->
    <h4 class="text-center bioContent"><%= currUser.username %></h4>
    <p class="text-center bioContent"><%= currUser.email %></p>
    <p class="text-center bioContent mx-auto">Change your password</p>
    <p class="text-center bioContent mx-auto">Delete Account</p>
  </div>
</body>
